<div class="container">

<div class="scroll-button">
  <div class="btn-resa m-3" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Mes réservations à venir</div>
  <div class="btn-resa m-3" type="button" data-toggle="collapse" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Mes réservations passées</div>
</div>
<div class="row">
  <div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample1">
      <div class="card card-body">
        <div class="resa1 m-3">
            <h1>Mes reservations a venir</h1>
            <div>
                <% @res_futur.each do |i| %>
                <div class="infos">
                    <p>Planet : <%= i.planet.name %> </p>
                    <p>Proprietaire: <%= i.planet.user.username %> </p>
                    <p>Du <%= i.start_date.strftime('%m/%d/%Y') %> au <%= i.end_date.strftime('%m/%d/%Y') %></p>
                    <p>Status : <%= render :partial => "colorstatus", locals: { i: i } %></p>
                    <div class="btn btn-secondary active mb-3"><%= link_to "See reservation", reservation_path(i), :style=>'color: white;'%></div>
                    <div class="btn btn-secondary active mb-3">
                    <%= link_to "Cancel reservation", annul_path(i),  method: :patch, data: { confirm: 'Are you sure?' }, :style=>'color: white;'%></div>
                  </div>
                <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample2">
      <div class="card card-body">
        <div class="resa1 m-3">
            <h1 class="mb-3">Mes anciennes reservations</h1>
                <% @res_past.each do |i| %>
                <div class="infos">
                    <p>Planet : <%= i.planet.name %> </p>
                    <p>Proprietaire: <%= i.planet.user.username %> </p>
                    <p>Du <%= i.start_date.strftime('%m/%d/%Y') %> au <%= i.end_date.strftime('%m/%d/%Y') %></p>
                    <p>Status : <%= render :partial => "colorstatus", locals: { i: i } %></p>
                    <div class="btn btn-secondary active mb-3"><%= link_to "See reservation", reservation_path(i), :style=>'color: white;'%></div>
                </div>
                <% end %>
            </div>
          </div>
    </div>
  </div>
</div>

</div>

