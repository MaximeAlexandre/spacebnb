<div class="container col-4 p-3 card">
  <div class="form">
    <%= simple_form_for(@planet) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>

    <%= link_to 'Back', planets_path %>
  </div>
</div>


