<div class="container col-5">
  <div class="card-trip">
    <% if @planet.photo.attached? %>
      <%= cl_image_tag @planet.photo.key, crop: :scale %>
    <% end %>
    <div class="card-trip-infos">
      <div class="card-name-description">
        <h2><%=  @planet.name %></h2>
        <p><%= @planet.description %></p>
      </div>
      <div class="card-date-reservation">
        <h4> Available from <%= @planet.start_date.strftime('%d/%m/%y') %> to <%= @planet.end_date.strftime('%d/%m/%y') %></h4>
        <%= link_to 'Add a new reservation', new_planet_reservation_path(@planet), class: "btn btn-success" %>
      </div>
      <div class="card-trip-pricing">
        <h4>Price/night</h4>
        <h5><%= @planet.price %> â‚¬/guest</h5>
      </div>
    </div>
  </div>
  <div class="card-trip-reviews">
    <h1> REVIEWS </h1>
     <% if @reviews.empty? %>
       <p> No reviews currently </p>
     <% else %>
      <% @reviews.each do |review| %>
        <p> CONTENT: <%= review.content %> (NOTE: <%= review.note %>)
      <% end %>
     <% end %>
  </div>
  <%= link_to 'Back', planets_path %>
</div>

