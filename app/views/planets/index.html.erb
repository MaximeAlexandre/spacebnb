<h1 class="text-center mb-4"> OUR GALAXY EXPERIENCES </h1>
<div class="container">
  <div class="cards col-12">
    <% if @planets.empty? %>
      <h1>No planets</h1>
    <% end %>
    <% @planets.each do |planet| %>
      <div class="card mb-3 col-12">
        <div class="card-product-price">
          <div class="cards mt-3 col-9">
            <h1><%=link_to planet.name, planet_path(planet) , :style=>'color: #EB8F1B;'%></h1>
            <div class="ml-3 card-product-price">
              <div class="mt-2">
                <p>Address: <%=  planet.address %></p>
                <p>Description: <%=  planet.description %></p>
              </div>
              <div class="mt-3">
                <p>â˜…</p>
                <p><strong><%= planet.price %> $ / night</strong></p>
              </div>
            </div>
          </div>
          <div class="planet-img m-3">
            <% if planet.photo.attached? %>
              <%= cl_image_tag planet.photo.key, height: 120, width: 120, crop: :fill %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
